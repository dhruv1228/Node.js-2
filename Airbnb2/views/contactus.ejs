<%- include('partials/head') %>
<script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen">
  <%- include('partials/nav') %>
  <main class="flex items-start justify-center py-12 px-4">
    <section class="w-full max-w-md bg-white rounded-lg shadow-md p-6">
      <h1 class="text-2xl font-semibold text-gray-800 mb-6">Submit your details</h1>
      <form action="/contact-us" method="post" class="space-y-4">
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
          <input id="name" name="name" type="text" placeholder="Name"
                 class="w-full px-4 py-2 border border-gray-300 rounded-md bg-white text-gray-800 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition" />
        </div>

        <div>
          <label for="number" class="block text-sm font-medium text-gray-700 mb-1">Number</label>
          <input id="number" name="number" type="number" placeholder="Number"
                 class="w-full px-4 py-2 border border-gray-300 rounded-md bg-white text-gray-800 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition" />
        </div>

        <div>
          <input type="submit" value="Submit"
                 class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded-md cursor-pointer transition" />
        </div>
      </form>
    </section>
  </main>
</body>
</html>