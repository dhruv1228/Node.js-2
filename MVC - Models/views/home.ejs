<%- include('partials/head') %>
<script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 text-gray-800 font-sans">
  <%- include('partials/nav') %>
  <main class="max-w-3xl mx-auto py-12 px-4">
    <h1 class="text-3xl font-semibold mb-6">Welcome to Airbnb!</h1>
    
    <ul class="space-y-3">
      <% registeredhomes.forEach((home)=>{ %>
        <li class="bg-white shadow-md rounded-lg overflow-hidden flex flex-col md:flex-row">
          <div class="w-full md:w-40 h-44 bg-gray-100 flex items-center justify-center overflow-hidden">
            <% if (home.photourl) { %>
              <img src="<%= home.imageurl %>" alt="<%= home.homename %>" class="w-full h-full object-cover">
            <% } else { %>
              <div class="text-4xl text-gray-300">üè†</div>
            <% } %>
          </div>

          <div class="p-4 flex-1 flex flex-col justify-between">
            <div>
              <h3 class="text-lg font-semibold text-gray-800"><%= home.homename %></h3>
              <p class="text-sm text-gray-500 mt-1"><%= home.location %></p>
            </div>

            <div class="mt-4 flex items-center justify-between">
              <div class="flex items-baseline space-x-2">
                <span class="text-xl font-bold text-indigo-600">$<%= home.price %></span>
                <span class="text-sm text-gray-500">/ night</span>
              </div>

              <div class="flex items-center space-x-2">
                <span class="text-sm font-medium text-gray-700"><%= home.rating %></span>
                <svg class="w-5 h-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.286 3.96a1 1 0 00.95.69h4.173c.969 0 1.371 1.24.588 1.81l-3.378 2.455a1 1 0 00-.364 1.118l1.286 3.96c.3.921-.755 1.688-1.54 1.118L10 15.347l-3.35 2.631c-.784.57-1.84-.197-1.54-1.118l1.286-3.96a1 1 0 00-.364-1.118L2.65 9.387c-.783-.57-.38-1.81.588-1.81h4.173a1 1 0 00.95-.69l1.286-3.96z"/>
                </svg>
              </div>
            </div>
          </div>
        </li></svg>
      <% }) %>
    </ul>
  </main>
</body>
</html>